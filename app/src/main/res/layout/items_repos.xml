<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:elevation="12dp"
        android:shadowDy="30"
        app:cardCornerRadius="15dp"
        tools:ignore="MissingConstraints,RtlSymmetry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/intent_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingStart="4sp"
                android:text="ashflashdgflakhdjla"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="150dp"
                android:layout_height="21dp"
                android:layout_marginTop="8dp"
                android:paddingStart="4sp"
                android:text="ashflashdgflakhdjla"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_language"
                app:layout_constraintTop_toBottomOf="@+id/txt_language" />

            <TextView
                android:id="@+id/txt_repos_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:paddingStart="4sp"
                android:text="ashflashdgflakhdjla"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_name" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:text="@string/owner"
                android:textColor="@color/purple_700"
                android:textSize="8sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/txt_language"
                tools:ignore="SmallSp"
                tools:layout_editor_absoluteY="5dp" />

            <TextView
                android:id="@+id/txt_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="asdfasdfasd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/txt_id_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="adsfasdfasdf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_owner_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_owner_name" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/repository_data"
                android:textColor="@color/purple_700"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="@+id/txt_language"
                tools:layout_editor_absoluteY="1dp"
                tools:ignore="SmallSp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>